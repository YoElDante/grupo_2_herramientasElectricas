<!DOCTYPE html>
<html lang="es">

<head>
  <!-- Metadatos -->
  <%- include('../partials/meta.ejs')%>

    <!-- links -->

    <!--Custom Css-->
    <%- include('../partials/css.ejs')%>
      <link rel="stylesheet" href="/css/register.css" />
      <link rel="stylesheet" href="/css/profile.css" />

      <!-- Font -->
      <link rel="" href="" />

      <!--FavIcon-->
      <link rel="shortcut icon" href="/img/electroTools/icons/FavIcoYellow.ico" type="image/x-icon" />
      <!--Icons-->
      <script src="https://kit.fontawesome.com/28a6abd58f.js" crossorigin="anonymous"></script>

      <!-- Titulo de la Pag -->
      <title>ElectroTools - Registración</title>

</head>

<body>
  <!-- Cuerpo -->

  <header>
    <!--Encabezados-->
    <%- include('../partials/header.ejs')%>
  </header>

  <main id="main">
    <!-- principal -->
    <div class="conteiner">
      <section class="form-conteiner">
        <h1 class="heder-register">DATOS PERSONALES</h1>
        <form action="update/<%= account.id %>?_method=put" method="post" class="form" enctype="multipart/form-data">

          <fieldset name="accountData">
            <h2>Datos de la Cuenta</h2>
            <div class="div-form" id="email">
              <i class="fa-solid fa-envelope"></i>
              <input required type="email" name="email" id="email" placeholder="Correo Electrónico"
                value="<%= account.email %>">
            </div>

            <div class="div-form" id="username">
              <i class="fa-solid fa-user"></i>
              <input required type="text" name="username" placeholder="Nombre de Usuario" id="username"
                value="<%= account.username %>">
            </div>

            <div class="div-form" id="password">
              <i class="fa-solid fa-eye-slash"></i>
              <input type="password" name="password" placeholder="Contraseña" id="password" value="****" required>
            </div>

            <div class="div-form" id="confirmPassword">
              <i class="fa-solid fa-eye-slash"></i>
              <input type="password" name="confirmPassword" placeholder="Confirmar Contraseña" id="confirmPassword"
              value="****" required>
            </div>
          </fieldset>

          <fieldset name="userData">
            <h2>Datos de Usuario</h2>
            <div class="div-form" id="firstname">
              <i class="fa-solid fa-user"></i>
              <input type="text" name="firstname" placeholder="Nombre" id="firstname" required
                value="<%= account.user.firstname %>">
            </div>

            <div class="div-form" id="lastname">
              <i class="fa-solid fa-user"></i>
              <input type="text" name="lastname" placeholder="Apellido" id="lastname" required
                value="<%= account.user.lastname %>">
            </div>

            <div class="div-form" id="birthday">
              <i class="fa-solid fa-calendar-days"></i>
              <input type="date" name="birthday" placeholder="Fecha de nacimiento" id="birthday" required
                value="<%= account.user.birthday %>">
            </div>

            <div class="div-form" id="phone">
              <i class="fa-solid fa-phone"></i>
              <input type="text" name="phone" placeholder="Teléfono" id="phone" required
                value="<%= account.user.phone %>">
            </div>

            <div class="div-form" id="street">
              <i class="fa-solid fa-location-dot"></i>
              <input type="text" name="street" placeholder="Calle y Altura" id="street" required
                value="<%= account.user.street %>">
            </div>

            <div class="div-form" id="city">
              <i class="fa-solid fa-location-dot"></i>
              <input type="text" name="city" placeholder="Ciudad" id="city" required
                value="<%= account.user.city %>">
            </div>

            <div class="div-form" id="country">
              <i class="fa-solid fa-location-dot"></i>
              <input type="text" name="country" placeholder="País" id="country" required
                value="<%= account.user.country %>">
            </div>

            <div class="div-form" id="zipcode">
              <i class="fa-solid fa-location-dot"></i>
              <input type="text" name="zipcode" placeholder="Código Postal" id="zipcode" required
                value="<%= account.user.zipcode %>">
            </div>

            <h3>Tu avatar</h3>
            <div class="div-form" id="image">
              <i class="fa-solid fa-location-dot"></i>
              <input type="file" name="image" placeholder="Imagen de Perfil" id="image">
            </div>

          </fieldset>

          <div id="buttom-imput">
            <button type="submit" class="buttom-register confirmChanges">Confirmar Cambios</button>
          </form>

            <form action="delete/<%= account.id %>?_method=delete" method="post">
              <button type="submit" class="buttom-register deleteAccount">Borrar Cuenta</button>
            </form>

          </div>

      </section>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer.ejs') %>
  </footer>

  <!-- Scrips -->
  <script src=""></script>

</body>

</html>