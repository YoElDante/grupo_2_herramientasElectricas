<!DOCTYPE html>
<html lang="es">

<head>
  <!-- Metadatos -->
  <%- include('../partials/meta.ejs')%>

  <!-- links -->

  <!--Custom Css-->
  <%- include('../partials/css.ejs')%>
  <link rel="stylesheet" href="/css/register.css" />

  <!-- Font -->
  <link rel="" href="" />

  <!--FavIcon-->
  <link rel="shortcut icon" href="/img/icons/FavIcoYellow.ico" type="image/x-icon" />
  <!--Icons-->
  <script src="https://kit.fontawesome.com/28a6abd58f.js" crossorigin="anonymous"></script>

  <!-- Titulo de la Pag -->
  <title>ElectroTools - Registración</title>

</head>

<body>
  <!-- Cuerpo -->

  <header>
    <!--Encabezados-->
    <%- include('../partials/header.ejs')%>
  </header>

  <main>
    <!-- principal -->
    <div class="conteiner">
      <section class="form-conteiner">
        <h1 class="heder-register">REGISTRO DE USUARIO</h1>
        <form action="/products/register" method="post" class="form" enctype="multipart/form-data">
          
          <div class="div-form" id="email">
            <i class="fa-solid fa-envelope"></i>
            <input type="email" name="correoElectronico" placeholder="Correo Electrónico" id="correo-electronico"
              required>
          </div>

          <div class="div-form" id="userName">
            <i class="fa-solid fa-user"></i>
            <input type="text" name="Usuario" placeholder="Nombre de Usuario" id="nombre-de-usuario" required>
          </div>

          <div class="div-form" id="password">
            <i class="fa-solid fa-eye-slash"></i>
            <input type="password" name="contrasenia" placeholder="Contraseña" id="contrasenia" required>
          </div>

          <div class="div-form" id="password">
            <i class="fa-solid fa-eye-slash"></i>
            <input type="password" name="contrasenia2" placeholder="Confirmar Contraseña" id="contrasenia2" required>
          </div>

          <div class="div-form" id="name">
            <i class="fa-solid fa-user"></i>
            <input type="text" name="nombre" placeholder="Nombre" id="nombre" required>
          </div>

          <div class="div-form" id="lastName">
            <i class="fa-solid fa-user"></i>
            <input type="text" name="apellido" placeholder="Apellido" id="apellido" required>
          </div>

          <div class="div-form" id="age">
            <i class="fa-solid fa-calendar-days"></i>
            <input type="number" name="edad" placeholder="Edad" id="edad" required>
          </div>

          <div class="div-form" id="tel">
            <i class="fa-solid fa-phone"></i>
            <input type="tel" name="telefono" placeholder="Teléfono" id="telefono" required>
          </div>

          <div class="div-form" id="street">
            <i class="fa-solid fa-location-dot"></i>
            <input type="text" name="calle" placeholder="Calle" id="calle" required>
          </div>

          <div class="div-form" id="city">
            <i class="fa-solid fa-location-dot"></i>
            <input type="text" name="ciudad" placeholder="Ciudad" id="ciudad" required>
          </div>

          <div class="div-form" id="country">
            <i class="fa-solid fa-location-dot"></i>
            <input type="text" name="pais" placeholder="País" id="pais" required>
          </div>

          <div class="div-form" id="CP">
            <i class="fa-solid fa-location-dot"></i>
            <input type="text" name="codigoPostal" placeholder="Código Postal" id="codigoPostal" required>
          </div>

          <div class="div-form" id="image">
            <i class="fa-solid fa-location-dot"></i>
            <input type="file" name="imagen" placeholder="Imagen de Perfil" id="imagen" required>
          </div>

          <div  id="buttom-imput">
            <button type="submit" class="buttom-register">Registrarse</button>
          </div>

        </form>
      </section>
    </div>
  </main>

  <footer>
    <%- include('../partials/footer.ejs') %>
  </footer>

  <!-- Scrips -->
  <script src=""></script>

</body>

</html>