<!DOCTYPE html>
<html lang="es">

<head>
  <!-- Metadatos -->
  <%- include('../partials/meta.ejs')%>

    <!-- links -->
    <link rel="stylesheet" href="/css/productCreate.css"><!-- Cristian -->

    <!--Custom Css-->
    <%- include('../partials/css.ejs')%>

      <!-- Font -->
      <link rel="" href="" />



      <!--FavIcon-->
      <link rel="shortcut icon" href="/img/electroTools/icons/FavIcoYellow.ico" type="image/x-icon" />

      <!-- Titulo de la Pag -->
      <title>ElectroTools - Edici√≥n de Producto</title>
</head>

<body>
  <header>
    <%- include('../partials/header.ejs')%>
  </header>

  <main>
    <!-- Cristian -->
    <div class="mainConteiner">
      <section class="formConteiner">
          <h1 class="title">EDICION DE PRODUCTOS</h1>
          <form action="/product/edit/<%= product.id %>?_method=put" method="post" enctype="multipart/form-data">
          
              <label for="name">Ingrese el nuevo nombre del producto</label>
              <div class="divInput">
                  <input type="text" name="name" id="name" placeholder="Ej: Taladro 13mm 750w" value="<%= product.name %>" required>
              </div>

              
              <label for="price">Ingrese el nuevo precio del producto</label>
              <div class="divInput">
                  <input type="text" name="price" id="price" placeholder="Ej: 999999" value="<%= product.price %>" required>
              </div>
              
              <label for="discount">Ingrese el nuevo descuento del producto</label>
              <div class="divInput">
                  <input type="text" name="discount" id="discount" placeholder="Ej: 50" value="<%= product.discount %>">
              </div>

              <label for="description">Ingrese la nueva descripcion del producto</label>
              <div class="">
                  <textarea name="description" id="description" placeholder="Escriba una descripcion..." class="description"></textarea>
              </div>
              
              <label for="category">Ingrese la nueva categoria del producto</label>
              <div class="">
                  <select name="category" id="category" class="category">
                      <option>Seleccionar...</option>
                      <option value="Option1">Opcion 1</option>
                      <option value="Option2">Opcion 2</option>
                      <option value="Option3">Opcion 3</option>
                  </select>
              </div>
              
              <label for="image">Ingrese la nueva imagen del producto</label>
              <div class="">
                  <input type="file" name="image" id="image" class="file">
              </div>

              <div>
                  <button type="submit" class="submit">Guardar</button>
              </div>
  
          </form>
      </section>
  </div>
  <!-- /Cristian -->
  </main>

  <footer>
    <%- include('../partials/footer.ejs') %>
  </footer>
</body>

</html>