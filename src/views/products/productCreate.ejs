<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/meta.ejs')%>

    <%- include('../partials/css.ejs')%>
    <link rel="stylesheet" href="/css/productCreate.css"><!-- Cristian -->
    <title>Creacion de productos</title>
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>
    <main>
        <!-- Cristian -->
        <div class="mainConteiner">
            <section class="formConteiner">
                <h1 class="title">REGISTRO DE PRODUCTOS</h1>
                <form action="/product/create" method="post" enctype="multipart/form-data">
                
                    <label for="name">Ingrese el nombre del producto</label>
                    <div class="divInput">
                        <input type="text" name="name" id="name" placeholder="Ej: Taladro 13mm 750w">
                    </div>
                    
                    <label for="brand">Ingrese la marca del producto</label>
                    <div class="divInput">
                        <input type="text" name="brand" id="brand" placeholder="Ej: DeWalt">
                    </div>
                    
                    <label for="model">Ingrese el modelo del producto</label>
                    <div class="divInput">
                        <input type="text" name="model" id="model" placeholder="Ej: SDS DCH133hd 20V">
                    </div>

                    <label for="description">Ingrese la descripcion del producto</label>
                    <div class="">
                        <textarea name="description" id="description" placeholder="Escriba una descripcion..." class="description"></textarea>
                    </div>

                    <label for="price">Ingrese el precio del producto</label>
                    <div class="divInput">
                        <input type="text" name="price" id="price" placeholder="Ej: 999999">
                    </div>
                    
                    <label for="discount">Ingrese el descuento del producto</label>
                    <div class="divInput">
                        <input type="text" name="discount" id="discount" placeholder="Ej: 50">
                    </div>
                    
                    <label for="interest">Ingrese el interes del producto</label>
                    <div class="divInput">
                        <input type="text" name="interest" id="interest" placeholder="Ej: 10">
                    </div>

                    <label for="plan">Ingrese las cuotas del producto</label>
                    <div class="divInput">
                        <input type="text" name="plan" id="plan" placeholder="Ej: 6">
                    </div>

                    <label for="color">Ingrese el color del producto</label>
                    <div class="divInput">
                        <input type="text" name="color" id="color" placeholder="Ej: Rojo">
                    </div>

                    <label for="voltage">Ingrese el voltage del producto</label>
                    <div class="divInput">
                        <input type="text" name="voltage" id="voltage" placeholder="Ej: 220">
                    </div>

                    <label for="frequency">Ingrese la frecuencia del producto</label>
                    <div class="divInput">
                        <input type="text" name="frequency" id="frequency" placeholder="Ej: 50hz">
                    </div>

                    <label for="power">Ingrese la potencia del producto</label>
                    <div class="divInput">
                        <input type="text" name="power" id="power" placeholder="Ej: 800w">
                    </div>
                    
                    <!--<label for="generalCharacteristics">Ingrese las caracteristicas del producto</label>
                    <div class="divInput">
                        <input type="text" name="generalCharacteristics" id="generalCharacteristics" placeholder="Ej: permite taladrar">
                    </div>-->
                    
                    <label for="userManual">Ingrese el manual del producto</label>
                    <div class="divInput">
                        <input type="text" name="userManual" id="userManual" placeholder="Ej: http://manual.com">
                    </div>
                    
                    <label for="image">Ingrese las imagenes del producto</label>
                    <div class="divInput">                     
                        <input type="file" multiple name="image" id="image" class="file">
                    </div>

                    <div>
                        <button type="submit" class="submit">Guardar</button>
                    </div>
        
                </form>
            </section>
        </div>
        <!-- /Cristian -->
    </main>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>